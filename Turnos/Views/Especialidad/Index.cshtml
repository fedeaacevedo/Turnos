@model IEnumerable<Turnos.Models.Especialidad>

<!DOCTYPE html>

<html>
    <head>
        <title>Especialidades</title>
    </head>
    <body>
        <table>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                </tr>
            </thead>
            <tbody>
                @* Aca van los datos que traemos desde la base de datos  *@
                @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdEspecialidad">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.IdEspecialidad">Eliminar</a>
                    </td>
                </tr>
                
            }
                
            </tbody>
        </table>
    </body>
</html>